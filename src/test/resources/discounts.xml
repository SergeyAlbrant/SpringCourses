<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">


    <bean id="discountService" class="com.epam.spring.hometask.service.impl.DiscountServiceImpl">
        <property name="strategies">
            <list>
                <ref bean="birthdayStrategy" />
                <ref bean="tenthDayStrategy" />
            </list>
        </property>
    </bean>


    <bean id="birthdayStrategy" class="com.epam.spring.hometask.service.discount.BirthdayDiscountStrategy"/>
    <bean id="tenthDayStrategy" class="com.epam.spring.hometask.service.discount.TenthTicketDiscountStrategy"/>
</beans>